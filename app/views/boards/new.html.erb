<div class="container"> 
  <div class="form-group">    
   <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
      <%= form_with model: @board do |f| %>
        <div class="mb-3">
          <%= f.label :投稿者名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :一言で表現して %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>  
        <%= f.submit '投稿する', class: 'btn btn-primary' %>
      <% end %>
    </div>
   </div>
  </div>
</div>