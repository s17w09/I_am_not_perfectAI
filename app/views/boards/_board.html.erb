<div class="card w-90 h-70 bg-base-100 shadow-xl m-10 pb-0">
  <% if board.board_image.present? %>
  <%= image_tag board.board_image.url %>
   <% else %>
   <%= image_tag "board_placeholder.png", class: "card-img-top", width: "100", height:"100" %>
   <% end %>
  <div class="card-body flex justify-center  ">
    <h2 class="card-title">「<%= board.title %>」</h2>
    <p><%= board.name %>さんの作品</p>
    <p><%= l board.created_at, format: :long%></p>
    <div class="card-actions justify-end">
    <%= link_to "https://twitter.com/intent/tweet?url=#{boards_url}&text=【I'm a not PERFECT AI】に出展しました%0a%0a%23INPA %23ミニアプリWEEK%0a%0a", :onclick=>"window.open(this.href,'hoge', 'height=480, width=640');return false;", target: '_blank', data: { toggle: "tooltip", placement: "bottom" }, title: "Xでシェアする" do %>
      <svg class="style-1b1cd5z" viewBox="0 0 20 20 text-sm"><path d="m11.68 8.62 6.55-7.62h-1.55l-5.69 6.62-4.55-6.62h-5.25l6.88 10.01-6.88 7.99h1.55l6.01-6.99 4.8 6.99h5.24l-7.13-10.38zm-2.13 2.47-.7-1-5.54-7.92h2.39l4.47 6.4.7 1 5.82 8.32h-2.39l-4.75-6.79z"></path></svg>
    <% end %>
    </div>
  </div>
</div>